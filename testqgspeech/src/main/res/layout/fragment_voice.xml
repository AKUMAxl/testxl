<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/fragment_voice_width"
        android:layout_height="@dimen/fragment_voice_height">

        <ImageView
            android:id="@+id/fragment_voice_cur"
            android:layout_width="@dimen/fragment_voice_big_width"
            android:layout_height="@dimen/fragment_voice_big_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/fragment_voice_one"
            android:layout_width="@dimen/fragment_voice_small_width"
            android:layout_height="@dimen/fragment_voice_small_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fragment_voice_cur"
            android:layout_marginStart="@dimen/fragment_voice_small_margin_start"
            android:layout_marginLeft="@dimen/fragment_voice_small_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/fragment_voice_two"
            android:layout_width="@dimen/fragment_voice_small_width"
            android:layout_height="@dimen/fragment_voice_small_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fragment_voice_one"
            android:layout_marginStart="@dimen/fragment_voice_small_margin_start"
            android:layout_marginLeft="@dimen/fragment_voice_small_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/fragment_voice_shop"
            android:layout_width="@dimen/fragment_voice_small_width"
            android:layout_height="@dimen/fragment_voice_small_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fragment_voice_two"
            android:layout_marginStart="@dimen/fragment_voice_small_margin_start"
            android:layout_marginLeft="@dimen/fragment_voice_small_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>