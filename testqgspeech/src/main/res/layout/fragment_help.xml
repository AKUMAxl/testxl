<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">


        <TextView
            android:id="@+id/fragment_help_btn_back"
            android:layout_width="@dimen/fragment_help_btn_back_width"
            android:layout_height="@dimen/fragment_help_btn_back_height"
            android:layout_marginStart="@dimen/fragment_help_btn_back_margin_start"
            android:layout_marginLeft="@dimen/fragment_help_btn_back_margin_start"
            android:layout_marginTop="@dimen/fragment_help_btn_back_margin_top"
            android:background="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_help_tv_voice_skill_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_help_tv_margin_start"
            android:layout_marginLeft="@dimen/fragment_help_tv_margin_start"
            android:text="@string/voice_skill_explain"
            android:textColor="@color/white_eb"
            android:textSize="@dimen/text_size_28"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_help_btn_back"
            app:layout_constraintStart_toEndOf="@+id/fragment_help_btn_back"
            app:layout_constraintTop_toTopOf="@+id/fragment_help_btn_back" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_help_rc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/fragment_help_rc_margin_start"
            android:layout_marginLeft="@dimen/fragment_help_rc_margin_start"
            android:layout_marginTop="@dimen/fragment_help_rc_margin_top"
            android:layout_marginEnd="@dimen/fragment_help_rc_margin_end"
            android:layout_marginRight="@dimen/fragment_help_rc_margin_end"
            android:layout_marginBottom="@dimen/fragment_help_rc_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_help_btn_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>