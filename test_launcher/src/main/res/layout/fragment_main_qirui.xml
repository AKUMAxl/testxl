<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1920dp"
        android:layout_height="1080dp">

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="120sp"
            android:textColor="#000000"
            android:text="596"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="896dp"
            android:layout_marginTop="225dp"
            />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:text="续航里程"
            app:layout_constraintBottom_toBottomOf="@id/tv_speed"
            app:layout_constraintLeft_toRightOf="@id/tv_speed"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#000000"
            android:text="km"
            app:layout_constraintBottom_toTopOf="@id/tv_distance"
            app:layout_constraintLeft_toLeftOf="@id/tv_distance"
            />


        <TextView
            android:id="@+id/tv_vr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="170dp"
            android:layout_marginTop="121dp"
            android:gravity="center"
            android:text="试试说：播放音乐"
            android:textColor="#0B131E"
            android:textSize="24sp"
            android:background="@drawable/hp_bg_kuang"
            />


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="106dp"
            android:src="@drawable/hp_bg_yy"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_nav"
            android:layout_width="513dp"
            android:layout_height="262dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/hp_bg_nav_nor"
            >
            <ImageView
                android:id="@+id/iv_nav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:src=""/>

            <TextView
                android:id="@+id/tv_nav"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/iv_nav"
                app:layout_constraintLeft_toRightOf="@id/iv_nav"
                android:layout_marginLeft="14dp"
                android:text="导航"
                android:textSize="32sp"
                android:textColor="#0B131E"
                />

            <TextView
                android:id="@+id/tv_nav_home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="67dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_nav_home"
                />

            <TextView
                android:id="@+id/tv_nav_company"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toRightOf="@id/tv_nav_home"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="112dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_nav_company"
                />

            <TextView
                android:id="@+id/tv_nav_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toRightOf="@id/tv_nav_company"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="102dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_nav_search"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_media"
            android:layout_width="513dp"
            android:layout_height="262dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="433dp"
            android:background="@drawable/hp_bg_multimedia_nor"
            >
            <ImageView
                android:id="@+id/iv_media_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="54dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tv_media_name"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                app:layout_constraintTop_toTopOf="@id/iv_media_image"
                app:layout_constraintLeft_toRightOf="@id/iv_media_image"
                android:layout_marginLeft="31dp"
                android:text="Love Story"
                android:textSize="32sp"
                android:textColor="#0B131E"
                />

            <TextView
                android:id="@+id/tv_media_singer"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/tv_media_name"
                app:layout_constraintLeft_toRightOf="@id/iv_media_image"
                android:layout_marginLeft="31dp"                android:text="Love Story"
                app:layout_constraintBottom_toBottomOf="@id/iv_media_image"
                android:textSize="24sp"
                android:textColor="#6F7D91"
                />
            
            <ImageView
                android:id="@+id/iv_media_kuwo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/iv_media_image"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="57dp"
                android:src="@drawable/hp_icon_kuwo"/>

            <TextView
                android:id="@+id/tv_media_prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="67dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_media_prve"
                />

            <TextView
                android:id="@+id/tv_media_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toRightOf="@id/tv_media_prev"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="112dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_media_play"
                />

            <TextView
                android:id="@+id/tv_media_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toRightOf="@id/tv_media_play"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="102dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_media_next"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_more"
            android:layout_width="513dp"
            android:layout_height="262dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="667dp"
            android:background="@drawable/hp_bg_qj_nor"
            >
            <TextView
                android:id="@+id/iv_more_title"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="66dp"
                android:text="早上好"
                android:textSize="32sp"
                android:textColor="#0B131E"/>

            <TextView
                android:id="@+id/iv_more_detail"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_more_title"
                android:layout_marginLeft="66dp"
                android:text="新的一天开始了~"
                android:textSize="24sp"
                android:textColor="#6F7D91"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="39dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/bg_more"/>


            <TextView
                android:id="@+id/tv_more_muse"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="43dp"
                android:background="@drawable/bg_more_muse"
                />
            
            <TextView
                android:id="@+id/tv_more_muse_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_more_muse"
                app:layout_constraintTop_toTopOf="@id/tv_more_muse"
                app:layout_constraintBottom_toBottomOf="@id/tv_more_muse"
                android:text="冥想"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginLeft="12dp"
                />


            <TextView
                android:id="@+id/tv_more_nap"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="156dp"
                android:layout_marginBottom="43dp"
                android:background="@drawable/bg_more_nap"
                />

            <TextView
                android:id="@+id/tv_more_nap_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_more_nap"
                app:layout_constraintTop_toTopOf="@id/tv_more_nap"
                app:layout_constraintBottom_toBottomOf="@id/tv_more_nap"
                android:text="小憩"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginLeft="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>