<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_center"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <RadioGroup
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/location_ivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUAWEI HOST"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/location_p_ivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LANTU"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


                <RadioButton
                    android:id="@+id/location_rear_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左后"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


                <RadioButton
                    android:id="@+id/location_rear_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右后"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </RadioGroup>

            <Button
                android:id="@+id/start_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RE CONNECT"/>

            <Button
                android:id="@+id/create_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE GROUP"/>

            <Button
                android:id="@+id/scan_p2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCAN P2P"/>

            <Button
                android:id="@+id/remove_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE GROUP"/>


            <Button
                android:id="@+id/msg_to_ivi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSG -> IVI"/>

            <Button
                android:id="@+id/msg_to_p_ivi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSG -> P IVI"/>

            <Button
                android:id="@+id/msg_to_rear_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSG -> REAR LEFT"/>

            <Button
                android:id="@+id/msg_to_rear_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSG -> REAR RIGHT"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_left"
        app:layout_constraintRight_toLeftOf="@id/layout_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2P设备：" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_center"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_p2p_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2PClient设备：" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_client_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>